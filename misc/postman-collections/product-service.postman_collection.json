{
  "info": {
    "_postman_id": "",
    "name": "Product Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/products/health"
      }
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/v1/products",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Sample Product\",\n    \"description\": \"This is a sample product\",\n    \"price\": 99.99,\n    \"userId\": 1\n}"
        }
      }
    },
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/v1/products"
      }
    },
    {
      "name": "Get Product By ID",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/v1/products/1"
      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "url": "{{base_url}}/api/v1/products/1",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Product\",\n    \"description\": \"Updated description\",\n    \"price\": 129.99\n}"
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "url": "{{base_url}}/api/v1/products/1"
      }
    },
    {
      "name": "Get Products By IDs (Batch)",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/products/batch",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"ids\": [1, 2, 3]\n}"
        }
      }
    },
    {
      "name": "Get Products By User IDs",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/products/by-users",
        "body": {
          "mode": "raw",
          "raw": "{\n    \"ids\": [1, 2, 3]\n}"
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
