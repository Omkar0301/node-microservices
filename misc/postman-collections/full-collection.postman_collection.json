        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-auth-type",
                "value": "token",
                "description": "Set to 'cookie' for cookie-based auth or 'token' for token response"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"securepassword123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{gateway_url}}/api/auth/register",
              "host": ["{{gateway_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user. Returns user data and tokens (or sets cookies if x-auth-type is 'cookie')."
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-auth-type",
                "value": "token",
                "description": "Set to 'cookie' for cookie-based auth or 'token' for token response"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"securepassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
