            "url": {
              "raw": "{{gateway_url}}/api/auth/login",
              "host": ["{{gateway_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Log in a user. Returns user data and tokens (or sets cookies if x-auth-type is 'cookie')."
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-auth-type",
                "value": "token",
                "description": "Set to 'cookie' for cookie-based auth or 'token' for token response"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{gateway_url}}/api/auth/refresh-token",
              "host": ["{{gateway_url}}"],
              "path": ["api", "auth", "refresh-token"]
            },
            "description": "Refresh access token using a refresh token. Returns new tokens (or sets cookies if x-auth-type is 'cookie')."
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-auth-type",
                "value": "token",
                "description": "Set to 'cookie' to clear auth cookies"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}",
              "options": {
                "raw": {
                  "language": "json"
                }
